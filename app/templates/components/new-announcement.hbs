{{#if addNewAnnouncement}}
  <h1>New Announcements</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="upcomingSales">Upcoming Sales</label>
        {{input value=upcomingSales id="upcomingSales"}}
      </div>

      <div class="form-group">
        <label for="weatherWarnings">Weather Warnings</label>
        {{input value=weatherWarnings id="weatherWarnings"}}
      </div>

      <div class="form-group">
        <label for="otherNews">Other News</label>
        {{input value=otherNews id="otherNews"}}
      </div>
      <button {{action 'saveAnnouncement1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
