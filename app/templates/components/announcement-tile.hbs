<ul>
  {{#if isAnnouncementsShowing }}
    <p src={{announcement}} alt={{announcement.type}}></p>
    <li>Upcoming Sales:
      {{announcement.upcomingSales}}
    </li>
    <li>Weather Warning:
      {{announcement.weatherWarnings}}
    </li>
    <li>Other News:
      {{announcement.otherNews}}
    </li>
  {{else}}
    <button class="btn btn-primary"{{action 'announcementsShow'}}>Show Announcements</button>
  {{/if}}
  <button class="btn btn-warning"{{action 'announcementsHide'}}>Hide Announcements</button>
  <button class="btn btn-danger"{{action 'delete' announcement}}>Delete Announcement</button>
</ul>
